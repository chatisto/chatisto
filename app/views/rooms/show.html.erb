<h1 class="text-center" id="room-title"><%= @room.name %></h1>
<br>
<div class="row">
	<div class="col-md-6 col-md-offset-3" id="messages-container">
    <ul id="room-messages" class="list-unstyled">

    </ul>
  </div>
</div>
<div class="navbar-fixed-bottom">
  <div class="row message-input">
	  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <form id="message-input-form">
		    <div class="form-group">
		      <div class="input-group">
            <span class="input-group-addon">
              <%= link_to @username, login_room_path(@room.name) %>
            </span>
		        <input id="message-input" type="text" class="form-control" placeholder="your message goes here" autofocus autocomplete="off">
		        <span class="input-group-btn">
		          <button type="submit" class="btn btn-fab btn-fab-mini dropdown-toggle">
		      	    <%= material_icon :send %>
		          </button>
		          <button type="button" class="btn btn-fab btn-fab-mini dropdown-toggle" id="emoji-button">
		      	    <%= material_icon :tag_faces %>
		          </button>
		        </span>
		      </div>
		    </div>
      </form>
	  </div>
  </div>
</div>
