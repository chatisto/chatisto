@font-face {
  font-family: 'Material Icons';
  font-style: normal;
  font-weight: 400;
  src: url('<%= font_path("material-icons.eot") %>') format('eot'),
       url('<%= font_path("material-icons.otf") %>') format('otf'),
       url('<%= font_path("material-icons.ttf") %>') format('ttf'),
       url('<%= font_path("material-icons.woff") %>') format('woff'),
       url('<%= font_path("material-icons.woff2") %>') format('woff2');
}

.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-feature-settings: 'liga';
  -webkit-font-smoothing: antialiased;
}
